<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MLOBuddy.DetailsPage"
             Title="DetailsPage"
             xmlns:viewmodel="clr-namespace:MLOBuddy.ViewModel"
             x:DataType="viewmodel:DetailsPageViewModel">
    <Grid
        ColumnDefinitions=".5*,.5*"
        RowDefinitions="Auto,Auto,Auto,Auto,*"
        Padding="10"
        RowSpacing="5"
        ColumnSpacing="5">
        <Button
            Text="Download Pre-Q Letter"
            Grid.Row="0"
            Grid.Column="0"
            Command="{Binding DownloadLetterCommand}"/>
        <Button
            Text="{Binding FavoriteString}"
            Grid.Row="0"
            Grid.Column="1"
            Command="{Binding SetFavoriteCommand}"/>
        <Button
            Text="Call Client"
            Grid.Row="1"
            Grid.Column="0"
            Command="{Binding CallClientCommand}"/>
        <Button
            Text="Email Client"
            Grid.Row="1"
            Grid.Column="1"/>
        <Button
            Text="Edit Client"
            Grid.Row="2"
            Grid.ColumnSpan="2"/>
        <Frame
            Grid.Row="3"
            Grid.ColumnSpan="2">
            <Label
                Text="{Binding CurrClient.preq_string}"
                FontSize="15"/>
        </Frame>
        <CollectionView
            Grid.Row="4"
            Grid.ColumnSpan="2"
            ItemsSource="{Binding CurrClient.clients}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid
                        Padding="1">
                        <Frame>
                            <Label Text="{Binding .}"
                                   FontSize="15"/>
                        </Frame>
                        
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>